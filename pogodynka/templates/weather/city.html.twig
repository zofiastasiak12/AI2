{% extends 'base.html.twig' %}
{% block title %}Weather in {{ city }}, {{ country }}{% endblock %}
{% block body %}
<style>
 .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
 .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="example-wrapper">
 <h1>{{ city }}, {{ country }}</h1>
 
 <ul>
 {% for measurement in measurements %}
 <li>Data:{{ measurement.date|date('d.m.Y') }} - Temperatura:{{ measurement.celsius }}&deg;C - Wilgotnosc: {{measurement.humidity }}% - Cisnienie: {{measurement.pressure}}hPa - Wiatr: {{measurement.wind}}km/h</li>
 
 {% endfor %}
 </ul>
</div>
{% endblock %}